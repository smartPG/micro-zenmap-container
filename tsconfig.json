{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "baseUrl": ".",
      "paths": {
          "@/*": ["src/*"],
          "@pages/*": ["src/pages/*"]
      },
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "lib": ["es2015", "dom", "es2015.promise"]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
}